<%# TIMELINE %>
<% content_for :head do %>
  <%= stylesheet_link_tag "timeline" %>
<% end %>
<h1>Your Timeline</h1>
<div class="sidenav">
  <a href="/timeline">Timeline</a>
  <a href="javascript:void(0)">Notification</a>
  <a id="profile" href="/users/<%= session[:user]["id"] %>">User Profile</a>
  <a href="javascript:void(0)">Inbox</a>
  <a href="javascript:void(0)">Setting</a>
  <a href="/users/log_out">Logout</a>
</div>
<div class="tab-content">
<div id="page" class="container-fluid">
  <%= render "shared/add_post" %>
  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Public Posts</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Friends posts</a>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">Public</div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">Friends</div>
  </div>
  <div id="posts">
    <%= render partial: @posts, locals: { depth: 1 } %>
    <%# depth: 1 so can get tweets one tweet deep %>
  </div>
</div>
