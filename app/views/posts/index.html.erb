<%# TIMELINE %>
<% content_for :head do %>
  <%= stylesheet_link_tag "timeline" %>
<% end %>

<h1>Your Timeline</h1>

<div id="page" class="container-fluid">
  <div id="add-post">
    <%= render "shared/add_post" %>
  </div>
  <div class="tab-content">
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">For You</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Explore</a>
      </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
      <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <div id="posts">
          <% if @friends_posts.length > 0 %>
            <%= render partial: @friends_posts, locals: { depth: 1 } %>
            <%# depth: 1 so can get tweets one tweet deep %>
          <% else %>
            <p>No friends yet!<br/>
            Get started by adding some people from the explore tab!</p>
          <% end %>
        </div>
      </div>
      <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
         <div id="posts">
          <% if @posts.length > 0 %>
            <%= render partial: @posts, locals: { depth: 1 } %>
            <%# depth: 1 so can get tweets one tweet deep %>
          <% else %>
            <p>No posts yet!<br/>
            Start the conversation by writing a post!</p>
          <% end %>
        </div>
      </div>
  </div>
</div>
</div>